<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="test.invoicegenerator">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--
        android:allowBackup="false"
        android:fullBackupContent="false"
        tools:replace="allowBackup"-->
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.AuthenticationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.BaseActivity"
            android:label="@string/title_activity_base" />
        <activity android:name=".view.activities.UsersActivity" />
        <activity android:name=".view.activities.EraserActivity" />
        <activity android:name=".view.activities.CompanyDetailActivity" />
        <activity android:name=".general.UploadImage" />
        <activity android:name=".view.activities.DisplayImage" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="android3.maxtingapp.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
<!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".view.activities.AppPrivacyPolicy"
            android:label="Privacy Policy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.ClientActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.ActivityAddItem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.InvoiceInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.DiscountActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.TaxActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.DigitalSignatureActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>